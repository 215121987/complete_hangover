<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="1"
    tools:context="com.hangover.ashqures.hangover.activity.HomeActivity">
    <LinearLayout
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="10.70">
         <!--ListRow Left sied Thumbnail image-->
        <!--<LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip">-->

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:src="@drawable/ic_menu_camera" />
        </LinearLayout>
    <!--</LinearLayout>-->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:typeface="sans"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:layout_weight="3.30"
        android:gravity="center_horizontal" />

</LinearLayout>
