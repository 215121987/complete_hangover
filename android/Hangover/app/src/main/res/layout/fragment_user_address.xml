<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:layout_margin="10dp"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/deliver_to_title_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/TitleBar"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delivery_to_title"
            style="@style/CustomTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver To:- " />
    </RelativeLayout>
    <TextView
        android:id="@+id/deliver_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliver_to_title_layout"
        style="@style/CustomTextview"/>
    <RelativeLayout
        android:id="@+id/user_address_title_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/TitleBar"
        android:layout_below="@+id/deliver_to"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delivery_address_title"
            style="@style/CustomTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address" />
        <Button
            android:id="@+id/address_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_minus"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/user_addresses_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@+id/user_address_title_layout"
        android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/existing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Address"
                style="@style/CustomTitleTextView"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="Address"
                android:layout_marginBottom="10dp"
                android:id="@+id/address"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Street"
                android:id="@+id/street"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="City"
                android:enabled="false"
                android:id="@+id/city"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="State"
                android:enabled="false"
                android:id="@+id/state"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Country"
                android:enabled="false"
                android:id="@+id/country"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="ZipCode"
                android:enabled="false"
                android:id="@+id/zipCode"/>
            <Button
                android:id="@+id/save_address"
                style="@style/CustomButton"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:text="Save" />
    </LinearLayout>
</RelativeLayout>